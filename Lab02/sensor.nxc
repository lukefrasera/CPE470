task main()
{
     SetSensor(IN_1,SENSOR_TOUCH);
     until (SENSOR_1 == 1);
     TextOut(0,0, "Touch Sensor Activated");
     OnFwd(OUT_A, 50);
     OnFwd(OUT_B, -50);
     Wait(1000);
     ClearScreen();
     until (SENSOR_1 == 1);
     TextOut(0,0, "Touch Sensor Activated");
     OnFwd(OUT_AB,0);
     Wait(1000);
     ClearScreen();
}
